/* pages/room/room.wxss */
.container {
  width: 100%;
  height: 100%;
}
.item{
  width: 80%;
  background-color: #fff;
  border-radius: 38rpx;
  height: 150rpx;
  text-align: center;
  margin: 40rpx auto;
  box-shadow: 0px 7px 20px #ccc;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  transition: 0.5 all;
}
.item image{
  width: 124rpx;
  height: 124rpx;
}
.right-conner {
  display: flex;
  flex-direction: column; 
  justify-content: space-between;
}
.right-conner .name{
  margin-right: 14rpx;
  margin-top: 6rpx;
  font-weight: 600;
}
.people{
  text-align: right;
  padding-right: 13rpx;
  font-size: 12px;
  color: #666;
}
.item:hover{
  box-shadow: none;
}
